@using Performance.Management.BLL.ViewModel;

@model Performance.Management.BLL.ViewModel.RequestModel

@{
    string lang = Context.Request.Cookies["culture"].Value ?? "en";

    string username = new Performance.Management.UIL.Controllers.BaseController().GetUserName();

    bool isCurrentUserIsHR = new Performance.Management.UIL.Controllers.BaseController().CheckCurrentUserIsHR;
}

@if (Model.Request.HR_PerformanceUnit_Approval != null && Model.Request.HR_PerformanceUnit_Approval == true)
{
    <div class="box box-primary">
        <div class="box-header  with-border">
            <h3 class="box-title">
                <i class="fa fa-user-secret"></i>
                @Performance.Management.UIL.Language.Resource.HR_ManagerOfPersonal_Action
            </h3>
        </div>

        <div class="box-body">

            <div class="row">
                <div class="col-md-6 col-xs-12">
                    <div class="form-group">
                        <label>@Performance.Management.UIL.Language.Resource.Name</label>
                        <p class="text-muted">@Model.Request.HR_ManagerOfPersonal_EnglishName</p>
                    </div>
                </div>

                <div class="col-md-6 col-xs-12">
                    <div class="form-group">
                        <label>@Performance.Management.UIL.Language.Resource.Department</label>
                        <p class="text-muted">@Model.Request.HR_ManagerOfPersonal_DepartmentEnglishName</p>
                    </div>
                </div>
            </div>

            <div class="row">

                @if (!string.IsNullOrWhiteSpace(Model.Request.HR_ManagerOfPersonal_UserName))
                {
                    @Html.HiddenFor(m => m.Request.HR_ManagerOfPersonal_UserName, new { @id = "drpdown_HR_ManagerOfPersonal_UserName" })
                }

                <div class="col-md-6 col-xs-12">
                    <div class="form-group">
                        <label>@Performance.Management.UIL.Language.Resource.EqamaOrNationalID</label>
                        <p class="text-muted">@Model.Request.HR_ManagerOfPersonal_UserName</p>
                    </div>
                </div>

                <div class="col-md-6 col-xs-12">
                    <div class="form-group">
                        <label>@Performance.Management.UIL.Language.Resource.Position_Name</label>
                        <p class="text-muted">@Model.Request.HR_ManagerOfPersonal_Position</p>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 col-xs-12">
                    <div class="form-group">
                        <label>@Performance.Management.UIL.Language.Resource.Request_Recieved</label>
                        @if (Model.Request.HR_ManagerOfPersonal_Recieved != null && Model.Request.HR_ManagerOfPersonal_Recieved.Value)
                        {
                            <p><i class="fa fa-check text-success"></i></p>
                        }
                        else
                        {
                            <p><i class="fa fa-times text-danger"></i></p>
                        }
                    </div>
                </div>

                <div class="col-md-6 col-xs-12">
                    <div class="form-group">
                        @if (Model.Request.HR_ManagerOfPersonal_Recieved != null && Model.Request.HR_ManagerOfPersonal_Recieved.Value)
                        {
                            <label>@Performance.Management.UIL.Language.Resource.Recieved_DateTime</label>
                            if (Model.Request.HR_ManagerOfPersonal_RecievedDateTime != null)
                            {
                                <p class="text-muted">@Model.Request.HR_ManagerOfPersonal_RecievedDateTime.Value.ToString("dd/MM/yyyy hh:mm tt")</p>
                            }
                        }
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 col-xs-12">
                    <div class="form-group">
                        <label>@Performance.Management.UIL.Language.Resource.Request_Seen</label>
                        @if (Model.Request.HR_ManagerOfPersonal_Seen != null && Model.Request.HR_ManagerOfPersonal_Seen.Value)
                        {
                            <p><i class="fa fa-check text-success"></i></p>
                        }
                        else
                        {
                            <p><i class="fa fa-times text-danger"></i></p>
                        }
                    </div>
                </div>

                <div class="col-md-6 col-xs-12">
                    <div class="form-group">
                        @if (Model.Request.HR_ManagerOfPersonal_Seen != null && Model.Request.HR_ManagerOfPersonal_Seen.Value)
                        {
                            <label>@Performance.Management.UIL.Language.Resource.Seen_DateTime</label>
                            if (Model.Request.HR_ManagerOfPersonal_SeenDateTime != null)
                            {
                                <p class="text-muted">@Model.Request.HR_ManagerOfPersonal_SeenDateTime.Value.ToString("dd/MM/yyyy hh:mm tt")</p>
                            }
                        }
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 col-xs-12">
                    <div class="form-group">
                        <label>@Performance.Management.UIL.Language.Resource.Action</label>
                        @if (Model.Request.FK_Request_HR_ManagerOfPersonal_ActionID != null)
                        {
                            <p class="text-muted">
                                @{
                                    var _a = @Model.Request.FK_Request_HR_ManagerOfPersonal_ActionID;
                                }

                                @if (lang == "Ar")
                                {
                                    @_a.NameAr
                                }
                                else
                                {
                                    @_a.Name
                                }
                            </p>
                        }
                    </div>
                </div>

                <div class="col-md-6 col-xs-12">
                    <div class="form-group">
                        <label>@Performance.Management.UIL.Language.Resource.Action @Performance.Management.UIL.Language.Resource.DateTime</label>
                        @if (Model.Request.HR_ManagerOfPersonal_ActionDateTime != null)
                        {
                            <p class="text-muted">@Model.Request.HR_ManagerOfPersonal_ActionDateTime.Value.ToString("dd/MM/yyyy hh:mm tt")</p>
                        }
                    </div>
                </div>
            </div>

            <div class="row">

                @if (Model.Request.FK_Request_HR_ManagerOfPersonal_ReasonID != null)
                {
                    <div class="col-md-6 col-xs-12">
                        <div class="form-group">
                            <label>@Performance.Management.UIL.Language.Resource.Reason</label>
                            <p class="text-muted">
                                @{
                                    var r = @Model.Request.FK_Request_HR_ManagerOfPersonal_ReasonID;
                                }

                                @if (lang == "Ar")
                                {
                                    @r.NameAr
                                }
                                else
                                {
                                    @r.Name
                                }
                            </p>
                        </div>
                    </div>
                }
                <div class="col-md-6 col-xs-12">
                    <div class="form-group">
                        <label>@Performance.Management.UIL.Language.Resource.Comments</label>
                        <p class="text-muted">
                            @Model.Request.HR_ManagerOfPersonal_Comment
                        </p>
                    </div>
                </div>

            </div>

        </div>

        @if (Model.Request.HR_ManagerOfPersonal_Approval == null && Model.CurrentUserName.ToLower() == Model.Request.HR_ManagerOfPersonal_UserName.ToLower())
        {
            using (Html.BeginForm("HR_ManagerOfPersonal_Action", "Request", FormMethod.Post))
            {
                @Html.HiddenFor(m => m.Request.ID)
                @Html.HiddenFor(m => m.Request.StatusID)

                @Html.HiddenFor(m => m.CurrentUserName)
                @Html.HiddenFor(m => m.IsPerformanceUnitUser)
                @Html.HiddenFor(m => m.FeedBackGiven)
                @Html.HiddenFor(m => m.IsFinished)
                @Html.HiddenFor(m => m.IsHRUser)

                @Html.HiddenFor(m => m.HR_ManagerOfPersonal_UserName)

                <div class="box-body">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-xs-4">
                                        <label>@Performance.Management.UIL.Language.Resource.Action</label>
                                        @Html.DropDownListFor(m => m.Request.HR_ManagerOfPersonal_ActionID, new SelectList(Model.SActionList, "ID", lang == "Ar" ? "NameAr" : "Name"), @Performance.Management.UIL.Language.Resource.DropDownSelect + @Performance.Management.UIL.Language.Resource.Action + " -", new { @class = "form-control Select", id = "lstHR_ManagerOfPersonal_Actions" })
                                    </div>
                                    <div class="col-xs-4">
                                        <div id="divHR_ManagerOfPersonal_Reason">
                                            <label>@Performance.Management.UIL.Language.Resource.Reason</label>
                                            @Html.DropDownListFor(m => m.Request.HR_ManagerOfPersonal_ReasonID, new SelectList(Model.ReasonList, "ID", lang == "Ar" ? "NameAr" : "Name"), @Performance.Management.UIL.Language.Resource.DropDownSelect + @Performance.Management.UIL.Language.Resource.Reason + " -", new { @class = "form-control Select", id = "lstHR_ManagerOfPersonal_Reasons" })
                                        </div>
                                    </div>
                                    @*<div class="col-xs-4">
                                            <div id="divHR_ManagerOfPersonal_Group" hidden="hidden">
                                                <label>@Performance.Management.UIL.Language.Resource.Group</label>
                                                @Html.DropDownListFor(m => m.SGroupID, new SelectList(Model.SGroupList, "ID", "Name"), @Performance.Management.UIL.Language.Resource.DropDownSelect + @Performance.Management.UIL.Language.Resource.Group + " -", new { @class = "form-control Select", id = "lstHR_ManagerOfPersonal_Groups" })
                                            </div>
                                        </div>*@
                                </div>

                                <label>@Performance.Management.UIL.Language.Resource.Comments</label>
                                <div class="form-group">
                                    @Html.TextAreaFor(m => m.Request.HR_ManagerOfPersonal_Comment, new { @class = "form-control", @style = "width: 100%", @rows = "3", @placeholder = @Performance.Management.UIL.Language.Resource.Comments, id = "txtHR_ManagerOfPersonal_Comment" })
                                </div>
                                <button type="submit" id="btnUpdateHR_ManagerOfPersonal" class="btn btn-primary btn-md"><i class="fa fa-save"></i> @Performance.Management.UIL.Language.Resource.Update</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }

    </div>
}
