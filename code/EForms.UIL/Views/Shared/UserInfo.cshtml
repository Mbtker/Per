@model Performance.Management.BLL.ViewModel.Employee

@{
    string lang = Context.Request.Cookies["culture"].Value ?? "en";

    string username = new Performance.Management.UIL.Controllers.BaseController().GetUserName();
}

<li class="dropdown user user-menu">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        @if (@Model.SEX == "F")
        {
            <img src="~/Content/images/fuser.png" class="user-image" alt="User Image">
        }
        else
        {
            <img src="/Content/images/user.png" class="user-image" alt="User Image">
        }

        @if (!String.IsNullOrEmpty(Model.STAFF_ID))
        {
            <span class="hidden-xs">
                @if (lang == "Ar")
                {
                    @Model.ARB_STAFF_NAME
                }
                else
                {
                    @Model.ENGL_STAFF_NAME
                }
            </span>
        }
        else
        {
            <span class="hidden-xs">@(username)</span>
        }

    </a>
    @if (!String.IsNullOrEmpty(Model.STAFF_ID))
    {
        <ul class="dropdown-menu">
            <!-- User image -->
            <li class="user-header">
                @if (@Model.SEX == "F")
                {
                    <img src="/Content/images/fuser.png" class="img-circle" alt="User Image">
                }
                else
                {
                    <img src="/Content/images/user.png" class="img-circle" alt="User Image">
                }

                @if (lang == "Ar")
                {
                    <text>
                        <p>
                            @Model.ARB_STAFF_NAME
                            <small>@Model.POSITION_ENGLISH</small>
                            <small>@Model.DEPARTMENT_ARABIC</small>
                        </p>
                    </text>
                }
                else
                {
                    <text>
                        <p>
                            @Model.ENGL_STAFF_NAME
                            <small>@Model.POSITION_ENGLISH</small>
                            <small>@Model.DEPARTMENT_ENGLISH</small>
                        </p>
                    </text>
                }

            </li>
        </ul>
    }
</li>