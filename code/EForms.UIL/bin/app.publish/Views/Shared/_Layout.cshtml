        $(".SendEmail").click(function (event) {

            button = $(this);
            ID = button.data("id");
            url = button.data("url");
            $.ajax({
                type: "POST",
                url: url,
                dataType: "json",
                data: { id: ID },
                success: function (data) {
                    if (data) {

                        window.setTimeout(function () {
                            $(".bottom-success h4").after("<span>Email has been sent successfully!</span>");
